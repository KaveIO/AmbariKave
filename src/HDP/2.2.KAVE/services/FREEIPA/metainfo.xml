<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>FREEIPA</name>
            <displayName>FreeIPA</displayName>
            <comment>FreeIPA for unified identities, policies and auditing.</comment>
            <version>3.0.0</version>
            <components>
                <component>
                    <name>FREEIPA_SERVER</name>
                    <displayName>FreeIPA Server</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <commandScript>
                        <script>scripts/freeipa_server.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>6000</timeout>
                    </commandScript>
                    <customCommands>
                        <customCommand>
                            <name>distribute_robot_admin_credentials</name>
                            <commandScript>
                                <script>scripts/freeipa_server.py</script>
                                <scriptType>PYTHON</scriptType>
                                <timeout>600</timeout>
                            </commandScript>
                        </customCommand>
                        <customCommand>
                            <name>reset_robot_admin_expire_date</name>
                            <commandScript>
                                <script>scripts/freeipa_server.py</script>
                                <scriptType>PYTHON</scriptType>
                                <timeout>600</timeout>
                            </commandScript>
                        </customCommand>
                    </customCommands>
                </component>
                <component>
                    <name>FREEIPA_CLIENT</name>
                    <displayName>FreeIPA Client</displayName>
                    <category>CLIENT</category>
                    <commandScript>
                        <script>scripts/freeipa_client.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>6000</timeout>
                    </commandScript>
                </component>
            </components>
        </service>
    </services>
</metainfo>

