<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>JENKINS</name>
            <comment>jenkins, build your code and distribute internally</comment>
            <displayName>Jenkins</displayName>
            <version>2.129</version>
            <components>
                    <component>
                    <name>JENKINS_MASTER</name>
                    <displayName>Jenkins</displayName>
                    <category>MASTER</category>
                    <commandScript>
                        <script>scripts/jenkins.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>1200</timeout>
                    </commandScript>
                </component>
            </components>
           <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                        <package><name>wget</name></package>
                        <package><name>git</name></package>
                        <package><name>java-1.8.0-openjdk</name></package>
                        <package><name>java-1.8.0-openjdk-devel</name></package>
                    </packages>
                </osSpecific>
            </osSpecifics>
            <configuration-dependencies>
                <config-type>jenkins</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>

