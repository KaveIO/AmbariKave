<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>JBOSS</name>
            <displayName>JBoss</displayName>
            <comment>jboss, a frontline server for jar files</comment>
            <version>7.1.1</version>
            <components>
                    <component>
                    <name>JBOSS_APP_SERVER</name>
                    <displayName>JBoss</displayName>
                    <category>MASTER</category>
                    <commandScript>
                        <script>scripts/jboss.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
            </components>
           <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                    	<package><name>wget</name></package>
                    	<package><name>java-1.7.0-openjdk</name></package>
                    </packages>
                </osSpecific>
            </osSpecifics>
            <configuration-dependencies>
                <config-type>jboss</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>

