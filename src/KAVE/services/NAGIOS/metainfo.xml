<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>NAGIOS</name>
            <comment>NAGIOS  monitoring tool</comment>
            <displayName>Nagios</displayName>
            <components>
                  <component>
                    <name>NAGIOS_SERVER</name>
                    <displayName>nagios server</displayName>
                    <category>MASTER</category>
                    <commandScript>
                        <script>scripts/nagios.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                  </component>
	            <component>
	                <name>NAGIOS_MONITOR</name>
	                <displayName>Nagios Monitor</displayName>
	                <category>SLAVE</category>
	                <cardinality>1+</cardinality>
	                <commandScript>
	                    <script>scripts/nagios_client.py</script>
	                    <scriptType>PYTHON</scriptType>
	                    <timeout>600</timeout>
	                </commandScript>
	              </component>
            </components>
           <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                        <package><name>httpd</name></package>
                        <package><name>rrdtool</name></package>
                    </packages>
                </osSpecific>
            </osSpecifics>
        </service>
    </services>
</metainfo>

